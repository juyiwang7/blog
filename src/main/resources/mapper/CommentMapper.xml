<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hdu.blog.mapper.CommentMapper">

    <select id="listComment" resultType="com.hdu.blog.entity.Comment">
        select * from comment
    </select>

    <select id="getComment" parameterType="int" resultType="com.hdu.blog.entity.Comment">
        select * from comment where comment_id = #{id}
    </select>
</mapper>